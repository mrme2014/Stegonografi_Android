<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_decoding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sample.stego_image.decode_process"
    android:background="@drawable/background">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHOOSE IMAGE"
        android:id="@+id/bChooseImage2"
        android:clickable="true"
        android:elegantTextHeight="false"
        android:enabled="true"
        android:longClickable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DECODE PROCESS"
        android:id="@+id/bDecodeProcess"
        android:clickable="true"
        android:elegantTextHeight="false"
        android:enabled="true"
        android:longClickable="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etTextDecode"
        android:singleLine="false"
        android:visibility="visible"
        android:layout_alignWithParentIfMissing="false"
        android:layout_above="@+id/bDecodeProcess"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bDecodeProcess"
        android:layout_alignEnd="@+id/bDecodeProcess"
        android:hint="   "
        android:longClickable="true"
        android:autoText="false"
        android:inputType="textMultiLine"
        android:editable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etTextDecode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ivImageDecode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView2"
        android:layout_below="@+id/bChooseImage2"
        android:background="@android:drawable/alert_light_frame" />

</RelativeLayout>
